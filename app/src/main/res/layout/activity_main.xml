<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9652"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonVehicle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_action_uservehicle" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/profileBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_action_useruser" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="210dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toTopOf="@+id/searchPlate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/mainpage_icon" />

    <EditText
        android:id="@+id/searchPlate"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/ic_action_usersearch"
        android:ems="10"
        android:hint="Enter Number Plate"

        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.813" />

    <Button
        android:id="@+id/buttonVehicle"
        android:layout_width="296dp"
        android:layout_height="54dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#ffffff"
        android:textColor="@android:color/black"
        android:text="Add Vehicle"
        app:layout_constraintBottom_toTopOf="@+id/myVehicles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:onClick="logout_clicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_logout" />

    <Button
        android:id="@+id/search"
        android:layout_width="283dp"
        android:layout_height="42dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/white"
        android:text="Search Vehicle"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/viewProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/profileBtn"
        android:layout_width="225dp"
        android:layout_height="49dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="@color/white"
        android:textColor="@android:color/black"
        android:text="Edit Profile"
        app:layout_constraintBottom_toTopOf="@+id/buttonVehicle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/viewProfile"
        android:layout_width="292dp"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:text="View Profile"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/profileBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/myVehicles"
        android:layout_width="224dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:textColor="@android:color/black"
        android:text="View My Vehicles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>